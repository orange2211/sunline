<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundone" >

    <RelativeLayout
        android:id="@+id/lay_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="[tl5205]柜员密码修改"
            android:textColor="#555555"
            android:textSize="27sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="确认" 
            android:background="@drawable/bg_btn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:text="取消" 
            android:background="@drawable/bg_btn" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lay_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lay_head"
        android:layout_above="@id/lay_bottom"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:background="#00000000" >
		
        <TextView
            android:id="@+id/zhanwei_lbl"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="一二三四" 
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/zhanwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:textSize="25sp"
            android:layout_alignBaseline="@id/zhanwei_lbl"
            android:layout_toRightOf="@id/zhanwei_lbl" 
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tellerno_lbl"
            android:layout_alignRight="@id/zhanwei_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhanwei"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="柜员代号" />
        <EditText
            android:id="@+id/tellerno"
            android:layout_alignLeft="@id/zhanwei"
            android:layout_alignRight="@id/zhanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_below="@id/zhanwei"
            android:layout_alignBaseline="@id/tellerno_lbl"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/oldpassword_lbl"
            android:layout_alignRight="@id/zhanwei_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tellerno"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="旧密码" />
        <EditText
            android:id="@+id/oldpassword"
            android:layout_alignLeft="@id/zhanwei"
            android:layout_alignRight="@id/zhanwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignBaseline="@id/oldpassword_lbl"
            android:layout_below="@id/tellerno"
            android:password="true" 
            android:textSize="25sp" />
        <TextView
            android:id="@+id/newpassword_lbl"
            android:layout_below="@id/oldpassword"
            android:layout_alignRight="@id/zhanwei_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="新密码" />
         <EditText
            android:id="@+id/newpassword"
            android:layout_alignLeft="@id/zhanwei"
            android:layout_alignRight="@id/zhanwei"
            android:layout_below="@id/oldpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/newpassword_lbl"
            android:textSize="25sp" />
       <TextView
            android:id="@+id/insertpassword_lbl"
            android:layout_alignRight="@id/zhanwei_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/newpassword"
            android:textSize="25sp"
            android:textColor="#000000"
            android:text="确认密码" />
        <EditText
            android:id="@+id/insertpassword"
            android:layout_alignLeft="@id/zhanwei"
            android:layout_alignRight="@id/zhanwei"
            android:layout_below="@id/newpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignBaseline="@id/insertpassword_lbl"
            android:textSize="25sp" />
    </RelativeLayout>
</RelativeLayout>